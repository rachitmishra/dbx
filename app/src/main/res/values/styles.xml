<resources>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme"/>

    <style name="AppTheme.NoActionBar" parent="Base.AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorAccent</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/button_internal_padding</item>
        <item name="android:paddingRight">@dimen/button_internal_padding</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:drawablePadding">@dimen/button_inline_margin_horizontal</item>
    </style>

    <!-- Flat button-->
    <style name="AppTheme.Button.Flat" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/colorTextLinkNormal</item>
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:paddingLeft">@dimen/button_internal_padding</item>
        <item name="android:paddingRight">@dimen/button_internal_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_color_transparent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/button_inline_margin_horizontal</item>
    </style>

    <style name="AppTheme.Button.Flat.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_color_accent</item>
    </style>

    <style name="AppTheme.Button.Flat.Colored.White">
        <item name="android:textColor">@color/colorTextLinkNormal</item>
        <item name="android:background">@drawable/btn_color_primary</item>
    </style>

    <style name="AppTheme.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/text_input_layout_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/text_input_layout_padding_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/text_input_layout_separator_margin_bottom</item>
    </style>

    <!-- Default style for all EditText -->
    <style name="AppTheme.EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/text_padding_default</item>
        <item name="android:paddingBottom">@dimen/text_padding_default</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/text_primary</item>
    </style>

    <!-- List styles -->

    <style name="AppTheme.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
    </style>

    <style name="AppTheme.ListView.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">@dimen/list_item_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/list_item_margin_horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.ListView.Icon">
        <item name="android:layout_width">@dimen/list_item_icon_size</item>
        <item name="android:layout_height">@dimen/list_item_icon_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">center</item>
        <item name="android:padding">0dp</item>
    </style>

    !-- Base Text styles -->
    <style name="AppTheme.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.Text.Title" parent="AppTheme.Text">
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:minHeight">@dimen/text_tile_height</item>
    </style>

    <style name="AppTheme.Text.Toolbar.Title" parent="AppTheme.Text.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingRight">@dimen/text_padding_default</item>
        <item name="android:paddingLeft">@dimen/text_padding_toolbar_left</item>
        <item name="android:paddingTop">@dimen/toolbar_text_padding_vertical_dense</item>
        <item name="android:paddingBottom">@dimen/toolbar_text_padding_vertical_dense</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.ListView.Text" parent="AppTheme.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.ListView.Text.Title" parent="AppTheme.ListView.Text">
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.Button.Flat.Toolbar">
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">@dimen/button_inline_margin_horizontal</item>
    </style>

    <style name="AppTheme.Text.Display">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_display</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Divider">
        <item name="android:background">@color/colorDividerLight</item>
    </style>

    <style name="AppTheme.Divider.Horizontal" parent="AppTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height_horizontal</item>
    </style>

    <style name="AppTheme.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/card_padding_horizontal</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:layout_margin">@dimen/card_margin_horizontal</item>
    </style>
</resources>
